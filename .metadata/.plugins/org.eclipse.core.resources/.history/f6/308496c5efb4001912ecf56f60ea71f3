package com.imooc.web.controller;

import java.io.File;
import java.util.Date;

import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;

import com.imooc.dto.FileInfo;

/**
 * @author linhaifeng1
 *
 */
@RestController
@RequestMapping("/file")
public class FileController {

	@PostMapping
	public FileInfo upload(MultipartFile file) throws Exception {
		System.out.println(file.getName()); //"file"
		System.out.println(file.getOriginalFilename()); //"test.txt"
		System.out.println(file.getSize());//size of the file
		String folder = "/Users/linhaifeng1/Documents/workspace-sts-3.9.9.RELEASE/imooc-security-demo/src/main/java/com/imooc/web/controller";
		
		File localFile = new File(folder, new Date().getTime() + ".txt");
		
		file.transferTo(localFile);
		
		return new FileInfo(localFile.getAbsolutePath());
	}
}
